generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  username   String   @unique
  password   String
  rating     Int      @default(1200)
  socketId   String?
  createdAt  DateTime @default(now())

  gamesAsRed   Game[] @relation("RedPlayer")
  gamesAsBlack Game[] @relation("BlackPlayer")
}


model Game {
  id             Int      @id @default(autoincrement())
  roomId         String   @unique
  playerRed      User?    @relation("RedPlayer", fields: [playerRedId], references: [id])
  playerRedId    Int?
  playerBlack    User?    @relation("BlackPlayer", fields: [playerBlackId], references: [id])
  playerBlackId  Int?
  status         String   @default("waiting")
  moves          Json?
  currentPlayer  String   @default("red")
  createdAt      DateTime @default(now())
}



